html
  head
    script(type='text/javascript').                                                  
      var pug_data =!{JSON.stringify(results)};   
    script(src="/poll.min.js")
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css')
    link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.6/css/all.css")
    link(href="https://fonts.googleapis.com/css?family=Open Sans" rel="stylesheet")
    link(href="https://fonts.googleapis.com/css?family=Prata" rel="stylesheet")
    link(rel='stylesheet', href='/main.css')
    title= 'VotingApp - '+title
  body
    include components/navbtn.pug
    div(class='col-xs-8 col-xs-offset-2 cardwrap')
      div(class='card')
        if state
          p(id="warning")= state
        h3= title
        p= message
        form(id ='submitvote' action = action method = 'post')
          div
            each val,index in options
              label(class="radio-inline")
                input(type='radio' value=index name="choice")
                p=val
            if authorized
              div(class="radio-inline")
                input(type="radio" value='-1' name="choice")
                input(type="text" name="addoption" maxlength="30" class="form-control")
            div(class='btn-toolbar')
              button(type='submit' class= "btn btn-info")
                span(class="glyphicon glyphicon-pencil" aria-hidden="true")
                span    Vote for it
              a(class= "btn btn-primary" href="https://twitter.com/intent/tweet?text="+title+"- vote on it at https://votingapp-chuya.glitch.me"+action) 
                span(class="glyphicon glyphicon-share-alt" aria-hidden="true")
                span    Share with friends
        div(id='containercanvas')
          canvas(id="myChart")
      include components/footer.pug


