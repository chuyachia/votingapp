html
head
  script(src='https://code.jquery.com/jquery-2.2.1.min.js')
  script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js')
  script(src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js")
  script(type='text/javascript').                                                  
    var pug_data =!{JSON.stringify(results)};   
  script(src="/controllers/plotPoll.client.js")
  link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css')
  link(href="https://fonts.googleapis.com/css?family=Open Sans" rel="stylesheet")
  link(href="https://fonts.googleapis.com/css?family=Prata" rel="stylesheet")
  link(rel='stylesheet', href='/public/main.css')
  title= 'VotingApp - '+title

body
  a(class='btn' href='/')
    span(class="glyphicon glyphicon-home" aria-hidden="true")
  div()
    div(class='col-sm-6  col-sm-offset-3 col-xs-10 col-xs-offset-1 container')
      p(id="warning")= state
      h2= title
      p= message
      form(id ='submitvote' action = action method = 'post')
        div
          each val,index in options
            label(class="radio-inline")
              input(type='radio' value=index name="choice")
              p=val
          if authorized
            div(class="radio-inline")
              input(type="radio" value='-1' name="choice")
              input(type="text" name="addoption" maxlength="30" class="form-control")
          div
            button(type='submit' class= "btn btn-info")
              span(class="glyphicon glyphicon-pencil" aria-hidden="true")
              span    Vote for it
            a(class= "btn btn-primary" href="https://twitter.com/intent/tweet?text="+title+"- vote on it at https://votingapp-chuya.glitch.me"+action) 
              span(class="glyphicon glyphicon-share-alt" aria-hidden="true")
              span    Share with friends
      div(id='containercanvas')
        canvas(id="myChart")
   

